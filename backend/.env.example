# Application
NODE_ENV=development
PORT=3000

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/livestock?schema=public"

# JWT
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=7d

# File Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880  # 5MB

# Logging
LOG_LEVEL=debug

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100

# Cache
CACHE_TTL=300  # 5 minutes
CACHE_MAX_SIZE=1000

# Security
BCRYPT_ROUNDS=10

# Sync Configuration
SYNC_BATCH_SIZE=100
SYNC_INTERVAL=5000  # 5 seconds
SYNC_MAX_RETRIES=3