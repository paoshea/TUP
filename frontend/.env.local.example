# MongoDB Connection
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/livestock?retryWrites=true&w=majority

# Authentication
JWT_SECRET=your-32-character-secret-key-here
JWT_EXPIRY=7d  # Token expiration time

# MongoDB Configuration
MONGODB_DB_NAME=livestock
MONGODB_MAX_POOL_SIZE=10
MONGODB_CONNECT_TIMEOUT=10000

# API Keys
ANTHROPIC_API_KEY=your-anthropic-api-key  # For AI analysis features
OPENAI_API_KEY=your-openai-api-key  # For AI analysis features

# Environment
NODE_ENV=development
NEXTAUTH_URL=http://localhost:3000  # Required for authentication
NEXTAUTH_SECRET=your-nextauth-secret-key  # Required for authentication in development

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_REQUESTS=100  # Number of requests per window
RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds